<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/blood_bank_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/targetBG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FAFFFFFF"
                    android:text="AB+"
                    android:textColor="#020202"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FAFFFFFF"
                    android:text=" Blood Donor!"
                    android:textColor="#020202" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FAFFFFFF"
                    android:text="Contact: "
                    android:textColor="#020202" />

                <TextView
                    android:id="@+id/targetCN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAFFFFFF"
                    android:text="+639272777334"
                    android:textColor="#020202" />
            </LinearLayout>

            <TextView
                android:id="@+id/reqstUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFFFFFF"
                android:text="Requested by: Angel Jude Suarez"
                android:textColor="#020202" />

            <TextView
                android:id="@+id/posted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFFFFFF"
                android:text="Posted: 11:30 PM, 04/04/2022"
                android:textColor="#020202" />

            <TextView
                android:id="@+id/reqstLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFFFFFF"
                android:text="From: Adones Evangelista"
                android:textColor="#020202" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>